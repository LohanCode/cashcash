<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}CASHCASH Gestionnaire{% endblock %}</title>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/gerant.css') }}">
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
        {% endblock %}
    </head>
    <body>
        <style>
            :root {
                --cc-blue-navy: #0f1f3a;
                --cc-black: #000000;
                --cc-grey-medium: #969eaa;
                --cc-grey-light: #f3f5f8;
                --cc-white: #ffffff;
                --cc-accent-red: #e5534b;
                --cc-radius: 6px;
                --cc-shadow-soft: 0 4px 12px rgba(15, 31, 58, 0.15);
                --cc-font-main: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
            }
            
            .navbar {
                background-color: var(--cc-blue-navy) !important;
                padding: 0.8rem 1rem;
                box-shadow: var(--cc-shadow-soft);
            }
            
            .navbar-brand {
                padding: 0;
                margin-right: 2rem;
            }
            
            .navbar-brand img {
                height: 35px;
                width: auto;
            }
            
            .nav-link {
                color: var(--cc-white) !important;
                font-weight: 500;
                padding: 0.5rem 1rem !important;
                transition: color 0.2s ease-in-out;
            }
            
            .nav-link:hover, .nav-link:focus {
                color: var(--cc-grey-medium) !important;
            }
            
            .btn-outline-light {
                color: var(--cc-white);
                border-color: var(--cc-white);
                background-color: transparent;
                transition: all 0.2s ease-in-out;
            }
            
            .btn-outline-light:hover {
                background-color: var(--cc-white);
                color: var(--cc-blue-navy) !important;
                border-color: var(--cc-white);
            }
            
            body {
                background-color: var(--cc-grey-light) !important;
                margin: 0;
                padding: 0;
            }
            
            .container {
                background-color: var(--cc-white);
                min-height: 100vh;
                padding: 2rem;
                margin: 0;
                max-width: 100%;
            }
        </style>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary mb-4">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">
                    <img src="{{ asset('images/logo.png') }}" alt="Logo CASHCASH" height="30" class="d-inline-block align-text-top me-2">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="#" id="historiqueInterventions">
                                <i class="fas fa-history me-1"></i> Historique des interventions
                            </a>
                        </li>
                    </ul>
                    <div class="d-flex">
                        <a href="#" class="btn btn-outline-light">
                            <i class="fas fa-sign-out-alt me-1"></i> DÃ©connexion
                        </a>
                    </div>
                </div>
            </div>
        </nav>

        <div class="container">
            {% for type, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ type }}">{{ message }}</div>
                {% endfor %}
            {% endfor %}
            
            {% block body %}{% endblock %}
        </div>
        
        {% block javascripts %}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
        {% endblock %}
    </body>
</html>