<header class="cc-header">
    <div class="cc-header-left">
        <img src="{{ asset('images/logocashcash.png') }}" alt="CashCash" class="cc-logo">
    </div>

    <nav class="cc-nav">
        <a href="{{ path('tech_home') }}"
           class="cc-nav-btn {{ app.request.attributes.get('_route') == 'tech_home' ? 'cc-nav-btn--active' : '' }}">
            Tableau de bord
        </a>

        <a href="{{ path('intervention_historique') }}"
           class="cc-nav-btn {{ app.request.attributes.get('_route') == 'intervention_historique' ? 'cc-nav-btn--active' : '' }}">
            Historique des interventions
        </a>

        {% if is_granted('ROLE_GERANT') %}
            <a href="{{ path('intervention_mes') }}"
               class="cc-nav-btn {{ app.request.attributes.get('_route') == 'intervention_mes' ? 'cc-nav-btn--active' : '' }}">
                Gestion interventions
            </a>
        {% endif %}
    </nav>

    <div class="cc-header-right">
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <span class="cc-username">{{ app.user.userIdentifier }}</span>
        {% else %}
            <a href="{{ path('app_login') }}" class="cc-nav-btn cc-nav-btn--outline">
                Connexion / Inscription
            </a>
        {% endif %}
    </div>
</header>
